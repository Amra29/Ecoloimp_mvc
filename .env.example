# Configuración de la aplicación
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-this-in-production

# Configuración de la base de datos
DATABASE_URL=sqlite:///instance/ecoloim.db

# Configuración de correo electrónico (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-contraseña
MAIL_DEFAULT_SENDER=tu-email@gmail.com

# Configuración de autenticación
LOGIN_DISABLED=False

# Configuración de la aplicación
APP_NAME="Sistema de Conteo de Impresiones"
UPLOAD_FOLDER=instance/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Configuración de sesión
PERMANENT_SESSION_LIFETIME=28800  # 8 horas en segundos
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE='Lax'

# Configuración de SQLAlchemy
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=False

# Configuración de depuración
DEBUG=True
TESTING=False

# Configuración de CORS (si es necesario)
CORS_ORIGINS=*

# Configuración de seguridad
CSRF_ENABLED=True
WTF_CSRF_ENABLED=True
WTF_CSRF_SECRET_KEY=otra-clave-secreta-cambiar-en-produccion

# Configuración de logs
LOG_LEVEL=INFO
LOG_FORMAT='%(asctime)s - %(name)s - %(levelname)s - %(message)s'
